<div class="panel">
        <div class="panel-heading">
            <h4 class="panel-tittle">
                {{input type="checkbox" change=(action 'registrarActividad' item) }}
                <a data-toggle="collapse" href="#a{{item.id}}">
                    {{item.nombre}}
                </a>
            </h4>
        </div>
        <div id="a{{item.id}}" class="panel-collapse collapse">
            <div class="panel-body">
                <br>
                Inicio: <i>{{item.inicio}}</i><br>
                Fin: <i>{{item.fin}}</i>
            </div>
        </div>
    </div>