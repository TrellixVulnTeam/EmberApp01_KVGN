<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.10.1/sweetalert2.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.10.1/sweetalert2.min.css">
<div class="wrapper">
    <h2>{{model.evento.nombre}}</h2>
    <h3>Nuevo Participante</h3><hr>
    <form {{action 'save' on='submit'}}>
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10">
            <div class="form-group">
                <div class="title">
                    <h4>Nombre</h4>
                </div>
                {{input value=model.persona.nombre class="form-control" type="text" name="" placeholder="Nombre"}}<br>
            </div>
            <div class="form-group">
                <div class="title">
                    <h3>Email</h3>
                </div>
                {{input value=model.persona.email type="email" name="" class="form-control" placeholder="Email"}}<br>
            </div>
            <div class="form-group">
                <div class="title">
                    <h3>GÃ©nero</h3>
                </div>
                <div class="radio">
                    {{input checked=model.persona.isMasculino change=(action 'setGender' 1) type="radio" name="radio1" id="radio1" value="M"}}
                    <label for="radio1">
                        Masculino
                    </label>
                </div>
                <div class="radio">
                    {{input checked=model.persona.isFemenino change=(action 'setGender' 2) type="radio" name="radio1" id="radio2" value="F"}}
                    <label for="radio2">
                        Femenino
                    </label>
                </div>
            </div>
        </div>
    </div>
    <h3>Actividades</h3><hr>
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10">
            <div id="lista-actividades">
                {{lista-actividades lista=model.actividades registrarActividad=(action 'registrarActividad')}}
            </div>
        </div>
    </div>
    <hr>
    <button  class="form-control btn btn-success" >Registrar</button>
    </form>
</div>